<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Scrollable Output: Filling the space -->
    <ScrollView
        android:id="@+id/logScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input_bar"
        android:padding="12dp"
        android:scrollbarStyle="outsideOverlay">
        <TextView
            android:id="@+id/logView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="[SYSTEM] Backend Terminal ready.\n"
            android:textColor="#00FF00"
            android:textSize="11sp"
            android:textIsSelectable="true" />
    </ScrollView>

    <!-- Top Action Row (Floating inside scroll area) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="end">
        
        <TextView
            android:id="@+id/terminal_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="IDLE"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="#66FFFFFF" />

        <Button
            android:id="@+id/copy_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:text="COPY"
            android:textSize="8sp"
            android:textStyle="bold"
            android:backgroundTint="#40FFFFFF"
            android:textColor="#B0B0B0" />

        <Button
            android:id="@+id/clear_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:text="CLEAR"
            android:textSize="8sp"
            android:textStyle="bold"
            android:backgroundTint="#40FF5252"
            android:textColor="#FF5252" />

        <Button
            android:id="@+id/kill_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:text="KILL"
            android:textSize="8sp"
            android:textStyle="bold"
            android:backgroundTint="#60FF0000"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Keyboard-sticky Bottom Input Bar -->
    <LinearLayout
        android:id="@+id/input_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/card_bg"
        android:backgroundTint="#F21A1A1A"
        android:padding="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="14dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="80dp"> 
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ "
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginStart="16dp" />

        <EditText
            android:id="@+id/manual_input"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:hint="Terminal command..."
            android:textColor="#FFFFFF"
            android:textColorHint="#60FFFFFF"
            android:fontFamily="monospace"
            android:background="@null"
            android:textSize="13sp"
            android:inputType="text"
            android:imeOptions="actionSend"
            android:paddingHorizontal="12dp" />

        <ImageView
            android:id="@+id/send_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/ic_menu_send"
            android:padding="10dp"
            android:tint="@color/primary"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="4dp" />
    </LinearLayout>
</RelativeLayout>
