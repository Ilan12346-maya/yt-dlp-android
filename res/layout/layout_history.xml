<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Grid View: Now fills the background -->
    <GridView
        android:id="@+id/history_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="16dp"
        android:stretchMode="columnWidth"
        android:scrollbarStyle="outsideOverlay"
        android:clipToPadding="false"
        android:padding="16dp"
        android:paddingBottom="160dp" />

    <!-- Highly Floating Tab Selector at the BOTTOM -->
    <LinearLayout
        android:id="@+id/history_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/card_bg"
        android:backgroundTint="#F21A1A1A"
        android:orientation="horizontal"
        android:elevation="14dp"
        android:padding="2dp">

        <Button
            android:id="@+id/btn_history_all"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ALL"
            android:textSize="11sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_history_video"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="VIDEO"
            android:textSize="11sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_history_audio"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="AUDIO"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
